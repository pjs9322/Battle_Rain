package display_Sub;

import java.awt.BorderLayout;
import java.awt.Graphics;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

import display_Set.display_Set;

public class Room_Make extends display_Set {
	private static final long serialVersionUID = 1L;

	JPanel panel = new JPanel();
	JLabel roomName = new JLabel("规 力格");
	
	JTextField tfR = new JTextField(15);
	  
	JButton jbOK = new JButton("积己");
	JButton jbCan = new JButton("秒家");
	
	public boolean complete = false;
	
	public Room_Make() {
		this.actionListener = new ActionHandler();
		
		this.panel.add(roomName);
		this.panel.add(tfR);
		this.panel.add(jbOK, BorderLayout.SOUTH);
		this.panel.add(jbCan);
		this.add(panel);
		
		jbOK.addActionListener(actionListener);
		jbOK.setActionCommand("Make");
		jbCan.addActionListener(actionListener);
		jbCan.setActionCommand("Cancel");
	}

	@Override
	public void draw(Graphics g) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void init_Parts() {
		// TODO Auto-generated method stub
		
	}
}
