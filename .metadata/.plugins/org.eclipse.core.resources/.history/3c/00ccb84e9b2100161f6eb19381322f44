package display_Sub;

import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

import control.control;

public class User_Join extends Sub_Frame {
	private static final long serialVersionUID = 1L;
	
	public boolean complete = false;

	private JPanel panel01 = new JPanel();
	private JPanel panel02 = new JPanel();
	private JPanel panel03 = new JPanel();
	private JPanel panel04 = new JPanel();

	private JLabel userID = new JLabel("ID");
	private JLabel userPW = new JLabel("패스워드");
	private JLabel userName = new JLabel("닉네임");
	
	private JTextField textID = new JTextField();
	private JTextField textPW = new JTextField();
	private JTextField textName = new JTextField();
	
	public User_Join(control control) {
		super(control,  250, 300);

		this.setTitle("회원가입");
		this.Sub_Lable.setText("ID");

		this.ok_Button.setText("가입");
		this.ok_Button.addActionListener(actionListener);
		this.ok_Button.setActionCommand("Search");
		
		this.cancel_Button.setText("취소");
		this.cancel_Button.addActionListener(actionListener);
		this.cancel_Button.setActionCommand("Cancel");
	}


	public void Search() {
		String alart = this.control.Room_Search(this.Sub_Text.getText());
		if (alart != null) {
			if (this.msg == null) {
				this.msg = new Alart_Mass(alart);
			} else if (!this.msg.isDisplayable()) {
				this.msg = new Alart_Mass(alart);
			} else if (!this.msg.isFocused()) {
				this.msg.requestFocus();
			}
		} else {
			this.dispose();
		}
	}
	
	public void Cancel() {
		this.dispose();
	}
}
