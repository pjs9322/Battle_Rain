package view;

import javax.swing.JFrame;

public class display extends JFrame implements Runnable {
	private static final long serialVersionUID = 1L;

	public static enum STATE {
		Login, Wait, Room_Host, Room_Member, Playing
	}

	private STATE state = STATE.Login;

	public void setState(STATE state) {
		this.state = state;
	}
	
	public display() {
		// 생성자 작성
		
		this.setVisible(true);
		// 가시화 옵션 
		this.setTitle("한글 께임");
		// 프레임의 이름 지정

		th = new Thread(this); // 스레드 생성
		th.start(); // 스레드 실행 - 이후 run함수로 이동

		this.setSize(1024, 1280); // 프레임 사이즈 지정
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); // 창 종료시 프로그램 종료
		
	}

	@Override
	public void run() {
		// TODO Auto-generated method stub
		try {
			while (true) {
				switch (state) {
				// 현재 state에 따라 보여주는 display가 달라진다.
				case Login:
					break;
				case Wait:
					break;
				case Room_Host:
					break;
				case Room_Member:
					break;
				case Playing:
					break;
				default:
					break;
				}
				Thread.sleep(50);
				// 50 milli sec 주기로 갱신
				repaint();
				// 갱신된 데이터에 따라 이미지 새로 그리기
			}
		} catch (Exception e) {}
		// 에러상황 발생을 가정한 try문이므로 모든 에러에 대해 아무것도 하지 않음
	}
}
